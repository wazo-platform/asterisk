+static int agent_is_logged(struct agent_pvt *agent)
 {
+	if (!agent) {
+		ast_log(LOG_WARNING, "NULL agent trying to login/logout\n");
+		return 0;
+	}
+
+	return agent->loginstart != 0;
+}
