+static void report_wrapup_time(struct ast_channel *ast, struct agent_pvt *p)
+{
+	int agent_wrapup_time = 0;
+	int queue_wrapup_time = 0;
+	int effective_wrapup_time = 0;
+	char agent[AST_MAX_AGENT];
+
+	if (p == NULL)
+		return;
+
+	snprintf(agent, sizeof(agent), "Agent/%s", p->agent);
+
+	agent_wrapup_time = p->wrapuptime / 1000;
+
+	if (ast && !ast_strlen_zero(pbx_builtin_getvar_helper(ast, "QUEUEWRAPUPTIME"))) {
+		queue_wrapup_time = atoi(pbx_builtin_getvar_helper(ast, "QUEUEWRAPUPTIME"));
+	}
+
+	effective_wrapup_time = MAX(agent_wrapup_time, queue_wrapup_time);
+
+	if (effective_wrapup_time == 0)
+	     return;
+
+	ast_queue_log("NONE", "NONE", agent, "WRAPUPSTART", "%d", effective_wrapup_time);
+	ast_verb(3, "<%s> wrapup time starting (%d seconds)\n", agent, effective_wrapup_time);
+	manager_event(EVENT_FLAG_AGENT, "AgentWrapupStart",
+			"Agent: %s\r\n"
+			"WrapupTime: %d\r\n",
+			agent, effective_wrapup_time);
+}
